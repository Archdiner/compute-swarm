# ComputeSwarm Environment Configuration

# Marketplace Server
MARKETPLACE_HOST=0.0.0.0
MARKETPLACE_PORT=8000
MARKETPLACE_WORKERS=4

# Network Configuration
NETWORK=base-sepolia  # or base-mainnet
RPC_URL=https://sepolia.base.org

# Wallet Configuration (Seller)
SELLER_PRIVATE_KEY=your_seller_private_key_here
SELLER_ADDRESS=your_seller_address_here

# Wallet Configuration (Buyer)
BUYER_PRIVATE_KEY=your_buyer_private_key_here
BUYER_ADDRESS=your_buyer_address_here

# Payment Configuration
USDC_CONTRACT_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e  # Base Sepolia USDC
PAYMENT_TOKEN=USDC
MIN_BALANCE_WARNING=10.0  # Minimum USDC balance before warning

# Compute Pricing (USD per hour)
DEFAULT_PRICE_PER_HOUR_MPS=0.50
DEFAULT_PRICE_PER_HOUR_CUDA=2.00

# x402 Protocol Configuration
X402_ENABLED=true
PAYMENT_CHALLENGE_TIMEOUT=300  # seconds
PAYMENT_VERIFICATION_RETRIES=3

# Security
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]  # JSON array of allowed origins

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=false
RELOAD=false

# Ngrok (for external access during testing)
NGROK_ENABLED=false
NGROK_AUTH_TOKEN=your_ngrok_token_here

# Coinbase Developer Platform
CDP_API_KEY=your_cdp_api_key_here
CDP_API_SECRET=your_cdp_api_secret_here
